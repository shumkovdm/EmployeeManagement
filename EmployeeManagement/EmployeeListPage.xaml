<Page x:Class="EmployeeManagement.EmployeeListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EmployeeListPage">
    <Grid>
        <StackPanel>
            <DataGrid Name="EmployeeDataGrid" AutoGenerateColumns="False" Margin="10" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Должность" Binding="{Binding Position}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Редактировать" Click="EditEmployee" Width="100" Margin="10" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Page>
